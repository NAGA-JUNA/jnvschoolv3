RewriteEngine On

# Route all requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?route=$1 [QSA,L]

# Protect sensitive directories from direct access
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Deny access to internal PHP files (only index.php should be accessible)
RewriteRule ^config/ - [F,L]
RewriteRule ^middleware/ - [F,L]
RewriteRule ^models/ - [F,L]
RewriteRule ^helpers/ - [F,L]
RewriteRule ^controllers/ - [F,L]
